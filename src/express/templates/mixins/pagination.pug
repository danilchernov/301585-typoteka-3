mixin pagination(page, totalPages, width, prefix)
  -
    let start = page - width;
    let end = page + width;

    if(start < 1){
      end += 1 - start;
      start = 1;
    }

    if(end > totalPages){
      start -= end - totalPages;
      end = totalPages;
    }

    if(start < 1){
      start = 1;
    }

    let i = start - 1

  ul.pagination
    li
      a.pagination__button.button.button--backwards(class={'button--disabled': !(start > 1)} href=`/${prefix}page=${page - 1}` aria-label='Страница назад') Назад

    while i++ < end
      li.pagination__item(class={'pagination__item--active': i === page})
        a(href=`${prefix}page=${i}`)= i
    li
      a.pagination__button.button.button--forward(class={'button--disabled': !(end < totalPages)} href=`${prefix}page=${page + 1}` aria-label='Страница вперед') Вперед
