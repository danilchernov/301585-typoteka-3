mixin preview-articles-item(article = {})
  li.preview__item
    if article.categories.length
      ul.preview__breadcrumbs
        each category in article.categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href=`/articles/category/${category.id}`) #{category.name}

    .preview__background
      if article.image
        img.preview__background-image(src=`img/${article.image}` width='460' height='240' alt=`Изображение - ${article.title}`)

    +date(article.date)(class="preview__time")

    h3.preview__name
      a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
    p.preview__text #{article.announce}
    a.preview__comment(href='#')
      | Комментарии
      span.preview__cloud
      b.preview__comment-count #{article.comments.length || 0}

mixin preview-articles-list(articles = [])
  if articles.length
    ul.preview__list
      each article in articles
        +preview-articles-item(article)

