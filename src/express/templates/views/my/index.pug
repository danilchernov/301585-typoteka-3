extend /layout

append variables
  - bodyClasses = ['wrapper', 'wrapper--nobackground'];

block content
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article in articles
          li.notes__list-item
            time.notes__item-time(datetime=`${article.createdAt}`) #{article.createdDate}
            a.notes__item-text(href=`articles/edit/${article.id}`) #{article.title}
            a.notes__button.button.button--close-item(href=`/my/articles/${article.id}`)
              span.visually-hidden Закрыть строку списка

